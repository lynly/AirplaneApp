<p id="notice"><%= notice %></p>

<h1>Flights</h1>

<table class="striped">
  <thead>
    <tr>
      <th>Airplane</th>
      <th>Flight number</th>
      <th>Origin</th>
      <th>Destination</th>
      <th>Departure date</th>
      <th>Departure time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.airplane_id %></td>
        <td><%= flight.flight_number %></td>
        <td><%= flight.origin %></td>
        <td><%= flight.destination %></td>
        <td><%= flight.departure_date %></td>
        <td><%= flight.departure_time %></td>
        <td><%= link_to 'Show', flight %></td>
        <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
        <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<button class="btn waves-effect waves-light" type="submit" name="action"><%= link_to 'New Flight', new_flight_path %></button>
